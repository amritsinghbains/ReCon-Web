{
  "name": "ReCon Web",
  "description": "ReCon analyzes your network traffic to tell if personal information is being transmitted, and it doesn't even need to know what is your personal information to work.",
  "version": "0.0.1",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "devtools_page": "index.html",
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "http://domain/getjson*",
    "http://api.ipify.org/*",
    "https://recon-node.herokuapp.com/*",
    "tabs",
    "activeTab"
  ],
  "manifest_version": 2,
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources":
    [
      "*"
    ]
}